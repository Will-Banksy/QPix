{
	"version": 10,
	"configurePresets": [
		{
			"name": "base",
			"displayName": "Base",
			"generator": "Ninja",
			"hidden": true,
			"environment": {
				"QT_QPA_PLATFORM": "xcb"
			}
		},
		{
			"name": "debug",
			"displayName": "Debug",
			"inherits": "base",
			"binaryDir": "${sourceDir}/target/debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"displayName": "Release",
			"inherits": "base",
			"binaryDir": "${sourceDir}/target/release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	]
}